<resources>

    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryDark">@color/statusbar_background</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_background</item>
        <item name="navigationIcon">@drawable/toolbar_menu</item>
        <item name="subtitleTextAppearance">@style/Text.Toolbar.Subtitle</item>
        <item name="titleTextAppearance">@style/Text.Toolbar.Title</item>
    </style>

    <!-- drawer -->
    <style name="Drawer" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/drawer_background</item>
        <item name="android:listDivider">@color/drawer_divider</item>
    </style>

    <!-- floating action button -->
    <style name="FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/floating_icon</item>
        <item name="backgroundTint">@color/floating_background</item>
        <item name="fabSize">normal</item>
        <item name="useCompatPadding">true</item>
    </style>

    <style name="FloatingActionButton.Mini">
        <item name="android:tint">@color/floating_icon</item>
        <item name="backgroundTint">@color/floating_background</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="Image.BottomMenu" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:tint">@color/bottom_buttons_icon</item>
    </style>

    <!-- button -->
    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/button_background</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="Button.Light" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@color/button_light_background</item>
        <item name="android:textColor">@color/button_light_text</item>
    </style>

    <!-- cardview -->
    <style name="Card.Wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Card" parent="CardView.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Card.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Card.Text.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Card.Action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:divider">@drawable/divider_card_actions</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:showDividers">beginning|middle|end</item>
    </style>

    <!-- progress -->
    <style name="Progress.Circular" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_circular</item>
    </style>

    <style name="Progress.Circular.Indeterminate">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_circular</item>
    </style>

    <style name="Progress.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>

    <style name="Progress.Horizontal.Indeterminate">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_horizontal</item>
    </style>

    <!-- text -->
    <style name="Text">
        <item name="android:textAppearance">@android:style/TextAppearance</item>
    </style>

    <style name="Text.Toolbar"></style>

    <style name="Text.Toolbar.Title">
        <item name="android:textColor">@color/toolbar_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Toolbar.Subtitle">
        <item name="android:textColor">@color/toolbar_subtitle</item>
    </style>

    <style name="Text.Header">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/header_title</item>
    </style>

    <style name="Text.Header.Small">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textColor">@color/header_subtitle</item>
    </style>

    <style name="Text.List">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="Text.List.Date">
        <item name="android:textAppearance">@android:style/TextAppearance</item>
    </style>

    <style name="Text.Drawer"></style>

    <style name="Text.Drawer.Title">
        <item name="android:textColor">@color/drawer_title</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Drawer.Subtitle">
        <item name="android:textColor">@color/drawer_subtitle</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Daily">
        <item name="android:textColor">@color/daily_text</item>
    </style>

    <style name="Text.Daily.Empty">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/daily_text</item>
    </style>

    <style name="Text.Daily.Title">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/daily_title</item>
    </style>

    <style name="Text.Daily.Source">
        <item name="android:gravity">right</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textColor">@color/daily_source</item>
    </style>

    <style name="Text.BottomMenu"></style>

    <style name="Text.About">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/about_text</item>
    </style>

    <style name="Text.About.Action">
        <item name="android:textColor">@color/about_action</item>
    </style>

    <style name="Text.About.More">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

</resources>
