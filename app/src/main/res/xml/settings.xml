<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_group_display">

        <SwitchPreference
            android:defaultValue="false"
            android:key="readability"
            android:summary="@string/pref_readability_desc"
            android:title="@string/pref_readability" />

        <ListPreference
            android:defaultValue="@string/bible_translation_default"
            android:entries="@array/bible_translations"
            android:entryValues="@array/bible_translation_values"
            android:key="bible_translation"
            android:summary="@string/pref_translation_desc"
            android:title="@string/pref_translation" />

    </PreferenceCategory>

</PreferenceScreen>