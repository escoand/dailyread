<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- toolbar -->
        <include layout="@layout/toolbar" />

        <!-- content -->
        <fragment
            android:id="@+id/content"
            class="com.escoand.android.readdaily.DailyFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <!-- bottom buttons -->
        <FrameLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottom_buttons_background"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <include
                layout="@layout/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </android.support.design.widget.CoordinatorLayout>

    <!-- drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/drawer_background"
        app:headerLayout="@layout/drawer_head"
        app:itemIconTint="@color/drawer_icon"
        app:itemTextColor="@color/drawer_text"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>
