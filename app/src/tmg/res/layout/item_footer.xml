<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/color_bottom_buttons_background"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/button_today"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/Image.BottomMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_today" />

        <TextView
            style="@style/Text.BottomMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation_today" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/Image.BottomMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_share" />

        <TextView
            style="@style/Text.BottomMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation_share" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_bible_exegesis"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            style="@style/Image.BottomMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_bible" />

        <TextView
            style="@style/Text.BottomMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation_bible" />

    </LinearLayout>

</LinearLayout>