<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/daily_background">

    <!-- floating action buttons -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_more"
        style="@style/FloatingActionButton.Mini"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/floating_more"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_intro"
        style="@style/FloatingActionButton.Mini"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floating_more"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/drawer_intro"
        android:tint="@android:color/white"
        android:visibility="gone"
        app:backgroundTint="#4a90e2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_voty"
        style="@style/FloatingActionButton.Mini"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floating_intro"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/drawer_voty"
        android:tint="@android:color/white"
        android:visibility="gone"
        app:backgroundTint="#50e3c2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_other"
        style="@style/FloatingActionButton.Mini"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floating_voty"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:tint="@android:color/white"
        android:visibility="gone"
        app:backgroundTint="#f5a623" />

    <!-- content -->
    <ListView
        android:id="@+id/listView"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:cacheColorHint="@android:color/transparent"
        android:clipToPadding="false"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="50dp" />

    <!-- empty list -->
    <LinearLayout
        android:id="@+id/listNoData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            style="@style/Text.Daily.Empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/message_nodata"
            tools:ignore="UnusedAttribute" />

        <Button
            android:id="@+id/buttonStore"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/navigation_store" />

    </LinearLayout>

</RelativeLayout>