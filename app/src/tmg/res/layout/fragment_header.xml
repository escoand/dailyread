<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/header_background"
    android:gravity="center_vertical|center"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/header_rewind"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_rewind"
        android:tint="@android:color/white"
        tools:ignore="Suspicious0dp" />

    <FrameLayout
        android:id="@+id/header_control"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/header_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" />

        <FrameLayout
            android:id="@+id/header_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0">

            <ProgressBar
                style="@style/Progress.Circular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="50"
                android:secondaryProgress="100" />

            <TextView
                style="@style/Text.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="00:04" />

        </FrameLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/header_forward"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_forward"
        android:tint="@android:color/white"
        tools:ignore="Suspicious0dp" />

    <LinearLayout
        android:id="@+id/header_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_title"
            style="@style/Text.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_subtitle"
                style="@style/Text.Header.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right" />

            <ImageView
                android:id="@+id/read_bible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:src="@drawable/floating_bible"
                android:tint="@color/statusbar_background" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>