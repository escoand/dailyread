<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Card.Wrapper">

    <android.support.v7.widget.CardView
        android:id="@+id/daily_card"
        style="@style/Card.Daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daily_title"
                style="@style/Text.Daily.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/daily_source"
                    style="@style/Text.Daily.Source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/button_bible_exegesis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_bible"
                    android:tint="?attr/color_daily_source" />

            </LinearLayout>

            <TextView
                android:id="@+id/daily_text"
                style="@style/Text.Daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>