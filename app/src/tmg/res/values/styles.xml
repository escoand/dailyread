<resources>

    <!-- card -->
    <style name="Card">
        <item name="cardElevation">0dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <!-- text -->
    <style name="Text">
        <item name="fontPath">fonts/Nunito-Light.ttf</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Text.Toolbar">
        <item name="fontPath">fonts/Nunito-Light.ttf</item>
    </style>

    <style name="Text.Header">
        <item name="android:textColor">@color/drawer_text</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text.Header.Small">
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Text.Drawer">
        <item name="android:background">@color/drawer_background</item>
        <item name="android:textSize">14dp</item>
        <item name="itemIconTint">@color/drawer_icon</item>
        <item name="itemTextAppearance">@style/Text</item>
        <item name="itemTextColor">@color/drawer_text</item>
    </style>

    <style name="Text.Drawer.Title">
        <item name="android:textColor">@color/drawer_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Drawer.Subtitle">
        <item name="android:textColor">@color/drawer_text</item>
    </style>

    <style name="Text.Daily">
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:lineSpacingExtra">9dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text.Daily.Title">
        <item name="android:lineSpacingExtra">9dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Text.Daily.Source"></style>

    <style name="Text.BottomMenu">
        <item name="android:textSize">14dp</item>
    </style>

</resources>